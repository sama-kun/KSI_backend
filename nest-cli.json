{
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"assets": [
			{
				"include": "modules/project/template/*",
				"outDir": "dist/src"
			},
      {
        "include": "../public/**",
        "outDir": "dist/public"
      },
      {
        "include": "../views/**",
        "outDir": "dist/views"
      }
		],
		"watchAssets": true
	}
}
